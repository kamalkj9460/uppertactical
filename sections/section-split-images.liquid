{%- comment -%} /sections/split-images.liquid {%- endcomment -%}

{%- liquid
  assign section_width = section.settings.width
  assign image_height = section.settings.image_height
  if section.settings.enable_mobile_height
    assign image_height = image_height | append: ' ' | append: section.settings.mobile_image_height
  endif
  assign mobile_layout = section.settings.mobile_layout
  assign title = section.settings.title
  assign heading_highlight_type = section.settings.heading_highlight_type
  assign text = section.settings.text
  assign heading_size = section.settings.heading_size | times: 0.01
  assign button_text = section.settings.button_text
  assign button_link = section.settings.button_link | default: '#!'
  assign button_style = section.settings.button_style
  assign overlay_opacity = section.settings.overlay_opacity | times: 0.01
  assign text_position = section.settings.text_position
  assign show_text_shadow = settings.show_text_shadow
  assign animations_enabled = settings.animations_enabled
  assign animation_anchor = '#SplitImages--' | append: section.id
  assign animation_delay = 150

  assign mobile_layout_class = 'split-images__pane--first-block'

  case mobile_layout
    when 'second-block'
      if section.blocks.size == 2
        assign mobile_layout_class = 'split-images__pane--second-block'
      endif
    when 'split'
      assign mobile_layout_class = 'split-images__pane--split'
    when 'inline'
      assign mobile_layout_class = 'split-images__pane--inline'
  endcase
-%}

{% comment %}
  Enhanced text decorations options - Liqiud variables

  Dependencies:
    - Title liquid object from settings: `assign title = section.settings.title`
    - Highlight type from settings: `assign heading_highlight_type = section.settings.heading_highlight_type`
    - Accent color from global settings: `settings.color_accent`
    - SVG icons:
      - icon-squiggle.svg (assets)
      - icon-circle.liquid (snippet)
{% endcomment %}

{%- liquid
  assign icon_url = ''
  assign icon_color = settings.color_accent

  capture text_highlight_icon
    assign has_text_highlight = false

    if title contains '<em>'
      case heading_highlight_type
        when 'squiggle'
          assign icon_url = 'icon-squiggle.svg' | asset_url
          echo '<span class="text-highlight__icon"></span>'
        when 'circle'
          echo '<span class="text-highlight__icon">'
          render 'icon-circle', color: settings.color_accent
          echo '</span>'
        when 'stroke' or 'circle' or 'squiggle'
          assign has_text_highlight = true
      endcase
    endif
  endcapture

  capture icon_bg
    if icon_url != ''
      echo 'url( "' | append: icon_url | append: '" )'
    else
      echo 'none'
    endif
  endcapture
  capture icon_styles
    assign icon_bg = icon_bg | replace: '"', "'"
    echo 'style="--icon-url: ' | append: icon_bg | append: ';' | append: '--icon-color: ' | append: icon_color | append: ';"'
  endcapture
  
  assign text_highlight_wrapper_class = 'text-highlight-wrapper' | append: ' text-highlight-wrapper--' | append: heading_highlight_type
  capture text_highlight_start
    echo '<span class="text-highlight" ' | append: icon_styles | append: '>'
  endcapture
  capture text_highlight_end
    echo text_highlight_icon
    echo '</span>'
  endcapture

  if title != blank and title contains '<em>'
    case heading_highlight_type
      when 'squiggle' or 'circle' or 'stroke'
        assign title = title | replace: '<em>', text_highlight_start | replace: '</em>', text_highlight_end
    endcase
  endif
-%}

<section
  class="split-images-section split-images-section--{{ section.id }} {{ section.settings.text_color }}"
  id="SplitImages--{{ section.id }}"
  data-section-id="{{ section.id }}"
  data-section-type="split-images">

  {%- style -%}
    #SplitImages--{{ section.id }} { --overlay-opacity: {{ overlay_opacity }}; }
    #SplitImages--{{ section.id }} .main-heading { --adjust-heading: calc(var(--FONT-ADJUST-HEADING) * {{ heading_size }}); }
  {%- endstyle -%}

  {%- if section.blocks.size > 0 -%}
    <div class="split-images__pane {{ image_height }} {{ mobile_layout_class }}"
      {% if animations_enabled %}
        data-aos="zoom-out"
        data-aos-anchor="{{ animation_anchor }}"
        data-aos-delay="{{ animation_delay }}"
        data-aos-duration = "1000"
        {%- assign animation_delay = animation_delay | plus: 150 -%}
      {% endif %}>
      {%- for block in section.blocks -%}
        {%- liquid
          assign image = block.settings.image
          assign image_mobile = block.settings.image_mobile
          assign image_position = block.settings.image_position
          assign image_position_mobile = block.settings.image_position_mobile
          assign image_bg_pos = image_position
          assign image_bg_pos_mobile = image_position_mobile

          case image_bg_pos
            when 'center-top'
              assign image_bg_pos = 'bg-pos-center-top'
            when 'right-center'
              assign image_bg_pos = 'bg-pos-right-center'
            when 'center-center'
              assign image_bg_pos = 'bg-pos-center-center'
            when 'left-center'
              assign image_bg_pos = 'bg-pos-left-center'
            when 'center-bottom'
              assign image_bg_pos = 'bg-pos-center-bottom'
          endcase

          case image_bg_pos_mobile
            when 'center-top'
              assign image_bg_pos_mobile = 'bg-pos-center-top'
            when 'right-center'
              assign image_bg_pos_mobile = 'bg-pos-right-center'
            when 'center-center'
              assign image_bg_pos_mobile = 'bg-pos-center-center'
            when 'left-center'
              assign image_bg_pos_mobile = 'bg-pos-left-center'
            when 'center-bottom'
              assign image_bg_pos_mobile = 'bg-pos-center-bottom'
          endcase
        -%}

        <div class="split-images__scale split-images__scale--{{ forloop.index }}" {{ block.shopify_attributes }}>
          {%- unless image_mobile == blank -%}
            <div class="split-images__bg split-images__bg--mobile {{ image_bg_pos_mobile }} lazyload"
              data-bgset="{% render 'bgset', image: image_mobile %}"
              data-sizes="auto"
              data-parent-fit="cover"
            ></div>
            <noscript>
              <div class="split-images__bg split-images__bg--mobile {{ image_bg_pos_mobile }}" style="background-image: url('{{ image_mobile | img_url:'600x' }}');"></div>
            </noscript>
          {%- endunless -%}

          {%- unless image == blank -%}
            <div class="split-images__bg split-images__bg--desktop {{ image_bg_pos }} lazyload"
              data-bgset="{% render 'bgset', image: image %}"
              data-sizes="auto"
              data-parent-fit="cover"
            ></div>
            <noscript>
              <div class="split-images__bg split-images__bg--desktop {{ image_bg_pos }}" style="background-image: url('{{ image | img_url:'2048x' }}');"></div>
            </noscript>
          {%- else -%}
            <div class="split-images__bg split-images__bg--placeholder {{ image_bg_pos }}">
              {{- 'image' | placeholder_svg_tag: 'placeholder-svg-filled' -}}
            </div>
          {%- endunless -%}
        </div>
      {%- endfor -%}

      <div class="overlay"></div>
    </div>

    <div class="split-images__content align--{{ text_position }}">
      <div class="{{ section_width }} split-images__content-inner{% if show_text_shadow %} backdrop--radial{% endif %}"
        {% if animations_enabled %}
          data-aos="fade"
          data-aos-anchor="{{ animation_anchor }}"
          data-aos-delay="{{ animation_delay }}"
        {% endif %}>
        {%- if title != blank -%}
          <h1 class="split-images__heading main-heading{% if has_text_highlight %} {{ text_highlight_wrapper_class }}{% endif %}">
            {%- liquid
              if animations_enabled
                assign title_lines = title | split: '<p>'
                for line in title_lines
                  if line != blank
                    echo '<span class="text-reveal__cropper"><span data-aos="come-up" data-aos-anchor="' | append: animation_anchor | append:'" data-aos-delay="' | append: animation_delay | append: '">'

                      assign line_with_links = line | split: '<a'
                      assign line_mod  = ''

                      if line_with_links.size > 1 and has_text_highlight
                        for link_html_part in line_with_links
                          if link_html_part != blank
                            assign link_html_mod = link_html_part
                            if link_html_part contains ' href='
                              assign link_html_mod = link_html_part | prepend: '<a'
                            endif

                            if link_html_part contains 'text-highlight'
                              assign link_html_mod = link_html_mod | replace_first: '><span class="text-highlight', ' data-has-highlight><span class="text-highlight'
                            endif

                            assign line_mod = line_mod | append: link_html_mod
                          endif
                        endfor

                        echo line_mod | replace: '</p>', ''
                      else
                        echo line | replace: '</p>', ''
                      endif

                    echo '</span></span>'

                    unless forloop.last
                      assign animation_delay = animation_delay | plus: 150
                    endunless
                  endif
                endfor

                assign animation_delay = animation_delay | plus: 150
              else
                echo title | replace: '<p>', '' | replace: '</p>', ''
              endif
            -%}
          </h1>
        {%- endif -%}

        {%- if text != blank -%}
          <h2 class="slide__text main-text">
            {%- liquid
              if animations_enabled
                assign text_lines = text | escape | newline_to_br | split: '<br />'
                for line in text_lines
                  echo '<span class="text-reveal__cropper"><span data-aos="come-up" data-aos-delay="' | append: animation_delay | append: '">'
                  echo line
                  echo '</span></span>'

                  unless forloop.last
                    assign animation_delay = animation_delay | plus: 150
                  endunless
                endfor

                assign animation_delay = animation_delay | plus: 150
              else
                echo text | escape | newline_to_br
              endif
            -%}
          </h2>
        {%- endif -%}

        {%- if button_text != blank -%}
          <div class="slide__buttons main-buttons">
            <div class="main-buttons__item"
              {% if animations_enabled %}
                data-aos="fade-up"
                data-aos-anchor="{{ animation_anchor }}"
                data-aos-delay="{{ animation_delay }}"
              {% endif %}>
              <a class="slide__btn btn {{ button_style }}" href="{{ button_link }}">{{ button_text | escape }}</a>
            </div>
          </div>
        {%- endif -%}
      </div>

      {%- if button_text == blank and button_link != '#!' -%}
        <a class="split-images__link" href="{{ button_link }}"></a>
      {%- endif -%}
    </div>
  {%- else -%}
    {%- render 'no-blocks' -%}
  {%- endif -%}
</section>

